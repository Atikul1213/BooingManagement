@model DailyBookingCapacityModel
@{
    //page title
    ViewBag.PageTitle = T("Admin.NopStation.BookingManagement.DailyCapacities").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("BookingManagement.DailyBookingCapacities");
}

<style>
    #capacity-table input[type=number] {
        width: 100%;
        max-width: 200px;
    }
</style>

<form asp-controller="DailyBookingCapacity" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.NopStation.BookingManagement.DailyCapacities")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                @if (Model.DailyBookingProducts.Any())
                {
                    <div class="cards-group">
                        <div class="card card-default">
                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <nop-label asp-for="ProductId" />
                                    </div>
                                    <div class="col-md-9">
                                        <input type="hidden" name="ProductId" value="@Model.ProductId" />
                                        <input type="hidden" name="Id" value="@Model.Id" />
                                        <select class="form-control valid" onchange="setLocation('@Url.Action("Configure", "DailyBookingCapacity")?productId=' + this.value)">
                                            @foreach (var item in Model.DailyBookingProducts)
                                            {
                                                if (item.Selected)
                                                {
                                                    <option selected value="@item.Value">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="ProductId"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cards-group">
                        <div class="card card-default">
                            <div class="card-body">
                                <div class="form-group row">
                                    <table class="table table-bordered table-striped time-table" id="capacity-table">
                                        <thead>
                                            <tr>
                                                <th>@T("Admin.NopStation.BookingManagement.DailyBookingCapacityModel.DaysOfWeek")</th>
                                                <th>@T("Admin.NopStation.BookingManagement.DailyBookingCapacityModel.DaysOfWeek.Capacities")</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@T("Admin.NopStation.BookingManagement.DailyBookingCapacityModel.Fields.Day1Capacity")</td>
                                                <td>
                                                    <input type="number" name="Day1Capacity" value="@Model.Day1Capacity" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>@T("Admin.NopStation.BookingManagement.DailyBookingCapacityModel.Fields.Day2Capacity")</td>
                                                <td>
                                                    <input type="number" name="Day2Capacity" value="@Model.Day2Capacity" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>@T("Admin.NopStation.BookingManagement.DailyBookingCapacityModel.Fields.Day3Capacity")</td>
                                                <td>
                                                    <input type="number" name="Day3Capacity" value="@Model.Day3Capacity" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>@T("Admin.NopStation.BookingManagement.DailyBookingCapacityModel.Fields.Day4Capacity")</td>
                                                <td>
                                                    <input type="number" name="Day4Capacity" value="@Model.Day4Capacity" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>@T("Admin.NopStation.BookingManagement.DailyBookingCapacityModel.Fields.Day5Capacity")</td>
                                                <td>
                                                    <input type="number" name="Day5Capacity" value="@Model.Day5Capacity" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>@T("Admin.NopStation.BookingManagement.DailyBookingCapacityModel.Fields.Day6Capacity")</td>
                                                <td>
                                                    <input type="number" name="Day6Capacity" value="@Model.Day6Capacity" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>@T("Admin.NopStation.BookingManagement.DailyBookingCapacityModel.Fields.Day7Capacity")</td>
                                                <td>
                                                    <input type="number" name="Day7Capacity" value="@Model.Day7Capacity" />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</form>